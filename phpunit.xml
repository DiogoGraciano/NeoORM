<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         colors="true"
         verbose="true"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="NeoORMTest">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="DRIVER" value="mysql"/>
        <env name="DBHOST" value="mysql"/>
        <env name="DBPORT" value="3306"/>
        <env name="DBNAME" value="neoorm_test"/>
        <env name="DBCHARSET" value="utf8mb4"/>
        <env name="DBUSER" value="root"/>
        <env name="DBPASSWORD" value="root"/>
        <env name="PATH_MODEL" value="./tests/app/models"/>
        <env name="MODEL_NAMESPACE" value="Tests\App\Models"/>
    </php>
</phpunit>